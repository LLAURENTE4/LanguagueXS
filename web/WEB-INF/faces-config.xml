            <to-view-id>/home_person.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{service.registerPerson}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/register_person.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

